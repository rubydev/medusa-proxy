#!/usr/bin/env ruby

require 'rubygems'
require 'daemons'

require File.expand_path('../../proxy', __FILE__)

Daemons.run_proc \
  'MedusaProxy',
  :dir_mode   => :normal,
  :dir        => File.expand_path('../../log', __FILE__),
  :backtrace  => true,
  :log_output => true do
    Medusa::Server.run
end
